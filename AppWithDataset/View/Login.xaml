<Window x:Class="AppWithDataset.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300"
        xmlns:custom="clr-namespace:AppWithDataset.ViewModel">
    <Window.Resources>
        <custom:LoginViewModel x:Key="Login"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource Login}">
        <TextBox Text="{Binding UserInfo.USERNAME}" HorizontalAlignment="Left" Height="23" Margin="56,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <TextBox Text="{Binding UserInfo.PASSWORD}" HorizontalAlignment="Left" Height="23" Margin="56,135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="181"/>
        <Button Command="{Binding LoginCommand}" Content="Login" Margin="97,180,100,51"></Button>
    </Grid>
</Window>
